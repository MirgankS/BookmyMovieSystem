<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Home">

    <HorizontalScrollView
        android:id="@+id/horizontal_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/image_container_layout"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:orientation="horizontal"
            android:padding="1dp">

            <!-- Image 1 -->

            <!-- Image 2 -->
            <ImageView
                android:id="@+id/scrollable_image_1"
                android:layout_width="376dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:adjustViewBounds="true"
                android:padding="30dp"
                android:scaleType="centerCrop"
                android:src="@drawable/mainpage" />

            <ImageView
                android:id="@+id/scrollable_image_2"
                android:layout_width="340dp"
                android:layout_height="match_parent"
                android:src="@drawable/jurassic"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:padding="30dp"
                android:layout_marginEnd="8dp"/>

            <!-- Image 3 -->
            <ImageView
                android:id="@+id/scrollable_image_3"
                android:layout_width="340dp"
                android:layout_height="match_parent"
                android:src="@drawable/f1land"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:padding="40dp"
                android:layout_marginEnd="8dp"/>

            <!-- Image 4 -->
            <ImageView
                android:id="@+id/scrollable_image_4"
                android:layout_width="340dp"
                android:layout_height="263dp"
                android:layout_marginEnd="8dp"
                android:adjustViewBounds="true"
                android:paddingBottom="50dp"
                android:scaleType="centerCrop"
                android:src="@drawable/venom" />

            <!-- Image 5 (Optional) -->
            <ImageView
                android:id="@+id/scrollable_image_5"
                android:layout_width="340dp"
                android:layout_height="match_parent"
                android:src="@drawable/fant4"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:padding="60sp"
                android:layout_marginEnd="8dp"/>

            <!-- Image 6 -->
            <ImageView
                android:id="@+id/scrollable_image_6"
                android:layout_width="340dp"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/superman"
                android:padding="40sp"
                android:layout_marginEnd="8dp"/>

            <!-- Image 7 -->
            <ImageView
                android:id="@+id/scrollable_image_7"
                android:layout_width="340dp"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/open"
                android:padding="40sp"
                android:layout_marginEnd="8dp"/>

            <!-- Image 8 -->
            <ImageView
                android:id="@+id/scrollable_image_8"
                android:layout_width="340dp"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/joker"
                android:padding="30sp"
                android:layout_marginEnd="8dp"/>

        </LinearLayout>
    </HorizontalScrollView>

    <!-- Content below the HorizontalScrollView, now scrollable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:paddingBottom="16dp">
            <!-- Removed android:elevation="200dp" from here.
                 Elevation on individual items inside is preferred. -->

            <TextView
                android:id="@+id/text_below_scrollview"
                android:layout_width="169dp"
                android:layout_height="56dp"
                android:layout_marginTop="16dp"
                android:background="@color/yellow"
                android:elevation="4dp"
                android:padding="10dp"
                android:text="BookMyMovie"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.101"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="169dp"
                android:layout_height="23dp"
                android:background="@color/yellow"
                android:elevation="4dp"
                android:text="Book easy, watch happy"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="@+id/text_below_scrollview"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/text_below_scrollview"
                app:layout_constraintTop_toBottomOf="@id/text_below_scrollview" />

            <!-- Card-like items -->
            <!-- Item 1: Cycle -->
            <ImageView
                android:id="@+id/div1"
                android:layout_width="142dp"
                android:layout_height="106dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:elevation="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/movieeee"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.83"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <!-- Item 2: Walking -->

            <ImageView
                android:id="@+id/div2"
                android:layout_width="119dp"
                android:layout_height="116dp"
                android:layout_marginTop="36dp"
                android:background="@android:color/white"
                android:elevation="4dp"
                android:padding="10pt"
                android:scaleType="centerCrop"
                android:src="@drawable/joker"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.13"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@color/white"
                android:elevation="4dp"
                android:text="Joker"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/div2"
                app:layout_constraintStart_toStartOf="@+id/div2"
                app:layout_constraintTop_toBottomOf="@+id/div2" />

            <!-- Item 3: Cycling -->

            <ImageView
                android:id="@+id/div3"
                android:layout_width="116dp"
                android:layout_height="126dp"
                android:layout_marginTop="12dp"
                android:background="@android:color/white"
                android:elevation="4dp"
                android:padding="15sp"
                android:scaleType="centerCrop"
                android:src="@drawable/f1"
                app:layout_constraintEnd_toEndOf="@+id/div1"
                app:layout_constraintHorizontal_bias="0.576"
                app:layout_constraintStart_toStartOf="@+id/div1"
                app:layout_constraintTop_toBottomOf="@+id/div1" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@color/white"
                android:elevation="4dp"
                android:text="F1"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/div3"
                app:layout_constraintStart_toStartOf="@+id/div3"
                app:layout_constraintTop_toBottomOf="@+id/div3" />

            <!-- Item 4: Bus -->
            <ImageView
                android:id="@+id/div4"
                android:layout_width="120dp"
                android:layout_height="94dp"
                android:layout_marginTop="28dp"
                android:background="@android:color/white"
                android:elevation="4dp"
                android:padding="30sp"
                android:scaleType="centerCrop"
                android:src="@drawable/superman"
                app:layout_constraintEnd_toEndOf="@+id/textView3"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@color/white"
                android:elevation="4dp"
                android:text="Superman"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/div4"
                app:layout_constraintStart_toStartOf="@+id/div4"
                app:layout_constraintTop_toBottomOf="@+id/div4" />

            <!-- Item 5: Train -->
            <ImageView
                android:id="@+id/div5"
                android:layout_width="120dp"
                android:layout_height="94dp"
                android:layout_marginTop="30dp"
                android:background="@android:color/white"
                android:elevation="4dp"
                android:padding="15sp"
                android:scaleType="centerCrop"
                android:src="@drawable/avatar"
                app:layout_constraintEnd_toEndOf="@+id/textView4"
                app:layout_constraintStart_toStartOf="@+id/textView4"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@color/white"
                android:elevation="4dp"
                android:text="Avatar"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/div5"
                app:layout_constraintStart_toStartOf="@+id/div5"
                app:layout_constraintTop_toBottomOf="@+id/div5" />

            <!-- Item 6: Boating -->
            <ImageView
                android:id="@+id/div6"
                android:layout_width="120dp"
                android:layout_height="94dp"
                android:layout_marginTop="30dp"
                android:background="@android:color/white"
                android:elevation="4dp"
                android:padding="7dp"
                android:scaleType="centerCrop"
                android:src="@drawable/fant4"
                app:layout_constraintEnd_toEndOf="@+id/textView5"
                app:layout_constraintStart_toStartOf="@+id/textView5"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@color/white"
                android:elevation="4dp"
                android:text="Fantastic 4"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/div6"
                app:layout_constraintStart_toStartOf="@+id/div6"
                app:layout_constraintTop_toBottomOf="@+id/div6" />

            <!-- Item 7: Plane -->
            <ImageView
                android:id="@+id/div7"
                android:layout_width="120dp"
                android:layout_height="94dp"
                android:layout_marginTop="30dp"
                android:background="@android:color/white"
                android:elevation="4dp"
                android:padding="8sp"
                android:scaleType="centerCrop"
                android:src="@drawable/jurassic"
                app:layout_constraintEnd_toEndOf="@+id/textView6"
                app:layout_constraintStart_toStartOf="@+id/textView6"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@color/white"
                android:elevation="4dp"
                android:text="Jurassic Park"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/div7"
                app:layout_constraintStart_toStartOf="@+id/div7"
                app:layout_constraintTop_toBottomOf="@+id/div7" />

            <!-- Comments for positioning div1 are fine, can be kept for reference -->

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- The comment below was outside any specific element, I've removed it
         as it's clear what the root LinearLayout is for. -->
    <!-- You can add other UI elements here if needed,
         they will be placed vertically in the root LinearLayout -->

</LinearLayout>
